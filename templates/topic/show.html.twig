{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col">
                <div class="row align-items-center gx-2">
                    <div class="col-auto">
                        <a class="btn btn-sm btn-light rounded-pill" href="{{ path('app_topic_index') }}">
                            <i class="fa-solid fa-left"></i>
                        </a>
                    </div>
                    
                    <div class="col">
                        <h1>{{ topic.title }}</h1>
                    </div>
                </div>

                <ul class="list-unstyled">
                    {% for post in topic.posts %}
                        <li class="border-top py-3">
                            <div class="post rounded-3 p-2 position-relative">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        {{ post.author.email }}
                                    </div>
                                    <div class="col-auto me-auto">
                                        {{ post.postedAt | date('d/m/Y H:i') }}
                                    </div>
                                    <div class="col-auto">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-link dropdown-toggle link-underline link-underline-opacity-0 no-caret" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa-solid fa-ellipsis"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="#">
                                                    <i class="fa-solid fa-fw fa-flag"></i>
                                                    Signaler
                                                </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <h2 class="h4">
                                        <a 
                                            href="{{ path('app_post_show', { id: post.id }) }}" 
                                            class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-100-hover"
                                        >{{ post.title }}</a>
                                    </h2>
                                </div>
                                
                                <div>
                                    <button class="btn btn-secondary rounded-pill btn-sm">
                                        <i class="fa-solid fa-up"></i>
                                        Upvote
                                    </button>
                                    <button class="btn btn-secondary rounded-pill btn-sm">
                                        <i class="fa-solid fa-down"></i>
                                        Downvote
                                    </button>
                                    <button class="btn btn-secondary rounded-pill btn-sm">
                                        <i class="fa-solid fa-comment"></i>
                                        Commentaires
                                    </button>
                                    <button class="btn btn-secondary rounded-pill btn-sm">
                                        <i class="fa-solid fa-medal"></i>
                                    </button>
                                    <button class="btn btn-secondary rounded-pill btn-sm">
                                        <i class="fa-solid fa-share"></i>
                                        Partager
                                    </button>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="col-sm-4 col-md-3">
                <p class="text-secondary">{{ topic.description }}</p>
                
                <div class="d-flex flex-column gap-1">
                    <a class="btn btn-primary d-block text-start" href="{{ path('app_topic_post_new', { id: topic.id }) }}">
                        <i class="fa-solid fa-fw fa-plus"></i>
                        Nouvelle publication
                    </a>
                    <a class="btn btn-secondary d-block text-start" href="{{ path('app_topic_edit', {'id': topic.id}) }}">
                        <i class="fa-solid fa-fw fa-edit"></i>
                        Modifier le topic
                    </a>
                    {{ include('topic/_delete_form.html.twig') }}
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
