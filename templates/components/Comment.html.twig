<div{{ attributes }}>
    <div class="row gx-1 mb-3">
        <div class="col-auto">
            <i class="fa-solid fa-circle-user fs-1 text-primary"></i>
        </div>
        
        <div class="col">
            <b>{{ comment.author.email }}</b>
            
            <div class="mb-2">
                {{ comment.content }}
            </div>
            
            <div>
                <div class="btn-group">
                    <button 
                        class="btn btn-secondary rounded-start-5 btn-sm {{ this.userHasUpvoted ? 'active':'' }}"
                        {{ live_action('upvote', { commentId: comment.id }) }}
                    >
                        <i class="fa-solid fa-up"></i>
                    </button>
                    <div class="bg-secondary text-bg-secondary py-1 px-2">
                        {{ this.countVotes }}
                    </div>
                    <button 
                        class="btn btn-secondary rounded-end-5 btn-sm {{ this.userHasDownvoted ? 'active':'' }}"
                        {{ live_action('downvote', { commentId: comment.id }) }}
                    >
                        <i class="fa-solid fa-down"></i>
                    </button>
                </div>
                
                <button class="btn btn-secondary rounded-pill btn-sm">
                    <i class="fa-solid fa-comment"></i>
                    Commentaires
                </button>
                <button class="btn btn-secondary rounded-pill btn-sm">
                    <i class="fa-solid fa-share"></i>
                    Partager
                </button>
            </div>
        </div>
    </div>
</div>
